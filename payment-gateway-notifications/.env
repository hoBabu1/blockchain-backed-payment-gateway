
SUBGRAPH_URL=https://api.studio.thegraph.com/query/YOUR_ID/YOUR_SUBGRAPH/version/latest

# Polling interval in seconds (5-10 recommended)
POLLING_INTERVAL=5

# -----------------------------------------------------------------------------
# Database Configuration
# -----------------------------------------------------------------------------
# PostgreSQL connection URL
# Format: postgresql://username:password@host:port/database
DATABASE_URL=postgresql://postgres:password@localhost:5432/payment_notifications

# Or use SQLite for development (uncomment below and comment PostgreSQL above)
# DATABASE_URL=sqlite:///./payment_notifications.db

# -----------------------------------------------------------------------------
# Telegram Bot Configuration
# -----------------------------------------------------------------------------
# Get your bot token from @BotFather on Telegram
# 1. Open Telegram and search for @BotFather
# 2. Send /newbot command
# 3. Follow the instructions to create your bot
# 4. Copy the token here
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here

# -----------------------------------------------------------------------------
# Network Configuration
# -----------------------------------------------------------------------------
# Blockchain network (sepolia, mainnet, etc.)
NETWORK=sepolia

# Block explorer URL for transaction links
ETHERSCAN_URL=https://sepolia.etherscan.io

# -----------------------------------------------------------------------------
# API Server Configuration
# -----------------------------------------------------------------------------
# Host and port for the merchant registration API
API_HOST=0.0.0.0
API_PORT=8000

# -----------------------------------------------------------------------------
# Webhook Configuration
# -----------------------------------------------------------------------------
# Timeout for webhook HTTP requests (seconds)
WEBHOOK_TIMEOUT=30

# Maximum retry attempts for failed webhooks
WEBHOOK_MAX_RETRIES=4

# Retry delays in minutes (comma-separated)
# Default: 1min, 5min, 15min, 60min
WEBHOOK_RETRY_DELAYS=1,5,15,60

# -----------------------------------------------------------------------------
# Logging Configuration
# -----------------------------------------------------------------------------
# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Log file path (optional, logs to console if not set)
LOG_FILE=logs/notifications.log

# -----------------------------------------------------------------------------
# Service Configuration
# -----------------------------------------------------------------------------
# Service name for logging and identification
SERVICE_NAME=PaymentGatewayNotifications

# Graceful shutdown timeout in seconds
SHUTDOWN_TIMEOUT=30
